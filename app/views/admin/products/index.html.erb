<div class="page-wrapper">

    <%= render partial: "layouts/shared/breadcrumbs", locals: { linkText: 'Products' } %>
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Please view and edit individual products here.</h4>
                        <p id="notice"><%= notice %></p>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                <th>Title</th>
                                <th>Subtitle</th>
                                <th>Price</th>
                                <th>Price</th>
                                <th colspan="3"></th>
                                </tr>
                            </thead>
                        
                            <tbody>
                                <% @products.each do |product| %>
                                <tr>
                                    <td><%= product.title %></td>
                                    <td><%= product.subtitle %></td>
                                    <td><%= product.price %></td>
                                    <td>tester</td>
                                    <td><%= link_to 'Show', admin_product_path(product) %></td>
                                    <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
                                    <td><%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-body">                  
                        <br>
                        <%= link_to 'New Product', new_admin_product_path %>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
