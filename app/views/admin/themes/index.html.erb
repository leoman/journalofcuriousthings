<div class="content-wrapper">

  <%= render partial: "layouts/shared/breadcrumbs", locals: { linkText: @title } %>

  <div class="content-section-wrapper">
    <%= link_to 'New Theme', new_admin_theme_path, class: "btn" %>
    <p id="notice"><%= notice %></p>
  </div>

  <div class="content-section-wrapper"> 
    
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="4"></th>
        </tr>
      </thead>
      
      <tbody>
        <% @themes.each do |theme| %>
          <tr>
              <td><%= theme.name %></td>
              <td class="text-center">
                <%= link_to 'Edit', edit_admin_theme_path(theme), class: "btn --blue" %>
              </td>
              <td class="text-center">
                <%= link_to 'Destroy', admin_theme_path(theme), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn --red" %>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

</div>