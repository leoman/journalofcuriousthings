<%
    links = {
      products: admin_products_path,
      posts: admin_posts_path,
      tags: admin_tags_path,
      themes: admin_themes_path
    }
%> 
<header class="bg-white fixed w-full z-10 top-0 shadow">

  <div class="header">
    <h1>journal of curious things</h1>
  </div>
    
  <div class="w-full container mx-auto flex-grow flex items-center lg:w-auto md:w-auto md:block hidden lg:block mt-2 lg:mt-0 bg-white z-20">

    <ul class="list-reset flex flex-1 items-center px-4 md:px-0">
      <% links.each do |key, value| %>
        <li class="mr-6 my-2 md:my-0">
          <%= link_to key.capitalize, value, class: "border-solid block py-1 md:py-3 pl-1 align-middle text-orange-600 no-underline hover:text-gray-900 border-b-2 border-white hover:border-orange-600" %>
        </li>
      <% end %>
    </ul>

  </div>

</header>



