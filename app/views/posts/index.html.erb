

<div id="gridView" class="mt-8">

  <div class="grid">

    <% @posts.each do |post| %>
      <div class="item blog">
        <%= link_to post_show_path(post.slug) do %>
          <div class="content">
            <div class="effect-wrapper">
              <% if post.mainImage.attached? %>
                <div class="image">
                  <img src="<%= (url_for(post.mainImage)) %>" />
                </div>
              <% end %>
              <div class="post-title">
                <h3><%= post.title %></h3>
              </div>
              <div class="overlay">
                <div class="overlay-content">
                  <div class="title">
                    <h3><%= post.title %></h3>
                  </div>
                  <div class="hr"></div>
                  <div class="desc">
                    <p><%= post.content %></p>
                  </div>
                  <div class="hr"></div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>

</div>

<% if @paginated %>
  <div class="pagination">
    <% if @page >= 1 %>
      <%= link_to(posts_path({ page: @page - 1 })) do  %>
      <span class="prev">&lsaquo;</span> Previous
      <% end %>
    <% end %>
    <% if @page < @paginated -1 %>
      <%= link_to(posts_path({ page: @page + 1 })) do  %>
        Next <span class="next">&rsaquo;</span>
      <% end %>
    <% end %>
    <p>Showing <%= @start %> - <%= @end %> of <%= @total %> results</p>
  </div>
<% end %>