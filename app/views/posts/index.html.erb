

<div id="gridView" class="mt-8">

  <div class="grid">

    <% @posts.each do |post| %>
      <div class="item blog">
        <%= link_to show_path(post.slug) do %>
        
          <div class="content">
            <div class="effect-wrapper">
              <% if post.mainImage.attached? %>
                <div class="image">
                  <img src="<%= (url_for(post.mainImage)) %>" />
                </div>
              <% end %>
              <div class="post-title">
                <h3><%= post.title %></h3>
              </div>
              <div class="overlay">
                <div class="overlay-content">
                  <div class="title">
                    <h3><%= post.title %></h3>
                  </div>
                  <hr />
                  <div class="desc">
                    <p><%= post.content %></p>
                  </div>
                  <hr />
                </div>
              </div>
            </div>

          <% end %>
        </div>
      </div>
    <% end %>

  </div>

</div>

