<div class="content --flex post">

  <div class="post-block">
  
    <div class="title">
      <h3><%= @post.title %></h3>
      <h4><%= @post.subtitle %></h4>
    </div>

    <div class="image">
      <% if @post.mainImage.attached? %>
        <img src="<%= (url_for(@post.mainImage)) %>" />
      <% end %>
    </div>

    <div class="post-content">
      <%= raw @post.content %>
    </div>

  </div>

  <div class="sidebar">
    <%= render "layouts/application/about" %>
  </div>

</div>